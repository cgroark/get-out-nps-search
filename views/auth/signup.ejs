<div class="background">
<div class="row form-group">
	<h2>Sign Up</h2>
	<div class="col-md-3">
	</div>
	<div class="col-md-6 auth_format">
		<form method="post" action="/auth/signup">
			<div class="form-group">
				<label class="signin-form">First Name:</label>
				<input type="text" name="firstname" class="form-control auth-input" placeholder="Your name">
			</div>
			<div class="form-group">
				<label class="signin-form">Last Name:</label>
				<input type="text" name="lastname" class="form-control auth-input" placeholder="Your surname">
			</div>
			<div class="form-group">
				<label class="signin-form">Username:</label>
				<input type="text" name="username" class="form-control auth-input" placeholder="create a username">
			</div>
			<div class="form-group">
				<label class="signin-form">Email:</label>
				<input type="text" name="email" class="form-control auth-input" placeholder="email address">
			</div>
			<div class="form-group">
				<label class="signin-form">Password</label>
				<input type="password" name="password" class="form-control auth-input" placeholder="Your password">
			</div>
			<div class="form-group">
				<label class="signin-form">Password Verification</label>
				<input type="password" name="passwordVerify" class="form-control auth-input" placeholder="Let's check that password">
			</div>
			<input type="submit" value="sign up" class="auth_submit">
		</form>
	</div>
	<div class="col-md-3"></div>
</div>
</div>
