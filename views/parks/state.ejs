<div>
	<h2>National Parks</h2>
	<% if(currentUser) {%>
		<h4 style="color: rgb(30,30,30)">Save a park to your wishlist to see additional information and weather forecast</h3>
	<% } else { %>
		<h4 style="color: rgb(30,30,30)"><a href="auth/login">Login</a> or <a href="auth/signup">create an account</a> to see additional information and weather forecast</h3>
	<% } %>

</div>
<div class="park_display row form-group">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<% if(park.length <=0){ %>
				<p>No Parks in that State</p>
			<%} else {%>
				<% park.forEach(function(item){ %>
					<div class="park_each">
						<h3 style="color: rgb(190,190,190)"><%=item.fullName%></h3>
						<h5>Located in <%=item.states%></h5>
						<p id="park_text"><%=item.description %></p>
						<p style="text-align: center"><a id="park_url" href="<%=item.url%>" target="blank">Vist Park Website</a></p>
						<form method="POST" action="/favs">
							<% if(currentUser) {%>
								<input hidden type="text" name="userId" value="<%= currentUser.id %>">
			         			<input hidden type="text" name="name" value="<%= item.fullName %>">
			         			<input hidden type="text" name="designation" value="<%= item.designation %>">
			         			<input hidden type="text" name="state" value="<%= item.states%>">
			         			<input hidden type="text" name="Latlong" value="<%= item.latLong %>">
			         			<input hidden type="text" name="url" value="<%= item.url %>">
			         			<input hidden type="text" name="weatherInfo" value="<%= item.weatherInfo %>">
			         			<input hidden type="text" name="description" value="<%= item.description %>">
			          			<button id="save_button" type="submit">Add to Favorites</button>
			          		<% } else { %>
			          			<input hidden type="text" name="name" value="<%= item.fullName %>">
			         			<input hidden type="text" name="designation" value="<%= item.designation %>">
			         			<input hidden type="text" name="state" value="<%= item.states%>">
			         			<input hidden type="text" name="Latlong" value="<%= item.latLong %>">
			         			<input hidden type="text" name="url" value="<%= item.url %>">
			         			<input hidden type="text" name="weatherInfo" value="<%= item.weatherInfo %>">
			         			<input hidden type="text" name="description" value="<%= item.description %>">
			          			<button id="save_button" type="submit">Add to Favorites</button>
							<% } %>
		        		</form>
					</div>
				<%});%>
			<%};%>
	</div>
	<div class="col-md-1"></div>
</div>




